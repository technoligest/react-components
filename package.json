{
  "name": "startup-react-components",
  "version": "1.0.239",
  "description": "Simple to use React components for the hustlers to get their startup off the ground quickly.",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc --project tsconfig.library.json",
    "build:cjs": "tsc --project tsconfig.library.json --module commonjs --outDir lib/cjs",
    "prepublishOnly": "yarn build",
    "publish-npm": "npm publish --access public",
    "dev": "next dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/technoligest/react-components.git"
  },
  "author": "technoligest",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/technoligest/react-components/issues"
  },
  "homepage": "https://github.com/technoligest/react-components#readme",
  "devDependencies": {
    "@types/luxon": "^2.3.1",
    "@types/node": "^17.0.25",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2",
    "autoprefixer": "^10.4.5",
    "next": "^12.1.5",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.24",
    "tslib": "^2.4.0",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "react": "^17 || 16.8",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "awesome-phonenumber": "^2.72.0",
    "classnames": "^2.3.1",
    "confetti-js": "^0.0.18",
    "luxon": "^2.3.2",
    "react-icons": "^4.3.1",
    "react-modal": "^3.14.4",
    "react-popper": "^2.2.5",
    "uuid": "^3.4.0"
  },
  "files": [
    "/lib"
  ]
}
