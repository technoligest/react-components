{
  "compilerOptions": {
    "outDir": "lib/esm",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "esnext"],
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib/esm"
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
